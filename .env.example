# ML-TSSP HUMINT Dashboard - Environment Configuration
# Copy this file to .env and fill in your values

# ================================================
# DASHBOARD CONFIGURATION
# ================================================
DASHBOARD_PORT=8501
DEBUG_MODE=False
LOG_LEVEL=INFO

# ================================================
# AUTHENTICATION (Production Only)
# ================================================
# Replace with secure random string in production
SECRET_KEY=your-super-secret-key-change-this-in-production
SESSION_TIMEOUT=3600
ENABLE_MFA=False

# ================================================
# DATABASE (Optional - for production)
# ================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/humint_db
# DATABASE_POOL_SIZE=10

# ================================================
# ML MODEL PATHS
# ================================================
GRU_MODEL_PATH=./models/gru_model.h5
XGB_MODEL_PATH=./models/xgboost_model.pkl
SHAP_EXPLAINER_PATH=./models/shap_explainer.pkl

# ================================================
# OPTIMIZATION SETTINGS
# ================================================
MAX_SOURCES_PER_TASK=3
MIN_RELIABILITY_THRESHOLD=0.4
DECEPTION_PENALTY=100
RECOURSE_COST=50
OPTIMIZATION_TIMEOUT=60

# ================================================
# API CONFIGURATION (If using external services)
# ================================================
API_ENDPOINT=http://localhost:8000
API_TIMEOUT=30
API_MAX_RETRIES=3

# ================================================
# MONITORING & ALERTS
# ================================================
ENABLE_ALERTS=True
ALERT_EMAIL=alerts@yourdomain.com
ALERT_THRESHOLD_DECEPTION=0.7
ALERT_THRESHOLD_DRIFT=0.15

# ================================================
# CACHE SETTINGS
# ================================================
CACHE_ENABLED=True
CACHE_TTL=300
REDIS_URL=redis://localhost:6379/0

# ================================================
# LOGGING
# ================================================
LOG_FILE=./logs/dashboard.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# ================================================
# SECURITY
# ================================================
CORS_ALLOWED_ORIGINS=http://localhost:8501
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900
